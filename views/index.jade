extends ./layout
block content
    .add-user-container
        .form-horizontal
            .form-group
                label(for="uName").col-sm-2.control-label 用户名
                .col-sm-10
                    input(type="text", placeholder="输入姓名")#uName.form-control
            .form-group
                label(for="uPwd").col-sm-2.control-label 密码
                .col-sm-10
                    input(type="text", placeholder="输入密码")#uPwd.form-control
            .form-group
                label(for="uTel").col-sm-2.control-label 手机号
                .col-sm-10
                    input(type="text", placeholder="输入手机号")#uTel.form-control
            .form-group
                .col-sm-offset-2.col-sm-10
                    button(type="submit")#submitBtn.btn.btn-primary 提交
    script.
        $('#submitBtn').click(function(){
            var admin = {
                uName: $('#uName').val(),
                uPwd: $('#uPwd').val(),
                uTel: $('#uTel').val()
            }
            $.ajax({
                url: 'http://localhost:3000/users/add',
                type: 'post',
                data: admin,
                dataType: "json",
                success: function (data) {
                    console.log(data)
                },
                error: function (err) {
                    console.log(err)
                }
            })
        })
